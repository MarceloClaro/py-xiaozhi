            "args": [
                "scripts/py_audio_scanner.py"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Test: Music Cache Scanner",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/music_cache_scanner.py"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Util: Generate Directory Tree",
            "type": "shell",
