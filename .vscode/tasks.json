{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run: GUI Mode (WebSocket)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "main.py",
                "--mode",
                "gui",
                "--protocol",
                "websocket"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run: CLI Mode (WebSocket)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "main.py",
                "--mode",
                "cli",
                "--protocol",
                "websocket"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run: GUI Mode (MQTT)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "main.py",
                "--mode",
                "gui",
                "--protocol",
                "mqtt"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run: Skip Activation (Debug)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "main.py",
                "--skip-activation"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Format: Black (All Files)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "black",
                "src/",
                "main.py",
                "scripts/"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Lint: Flake8 (Check All)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "flake8",
                "src/",
                "main.py",
                "--max-line-length=88",
                "--extend-ignore=E203,W503,E501"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Test: Camera Scanner",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/camera_scanner.py"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Test: Audio Scanner",
            "type": "shell",
